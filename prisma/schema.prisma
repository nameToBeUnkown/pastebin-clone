generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
}

model User {
    id             String   @id @default(cuid())
    email          String   @unique
    name           String
    hashedPassword String
    createdAt      DateTime @default(now())
    pastes         Paste[]
}

model Paste {
    id        String    @id
    title     String
    content   String
    language  String
    isPublic  Boolean   @default(true)
    views     Int       @default(0)
    expiresAt DateTime?
    createdAt DateTime  @default(now())
    authorId  String?
    author    User?     @relation(fields: [authorId], references: [id], onDelete: SetNull)

    @@index([authorId])
    @@index([createdAt])
    @@index([isPublic, createdAt])
}
